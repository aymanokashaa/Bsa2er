
@{
    Layout = null;
    ViewBag.Title = "your certification";
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html" charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body>
    <div style="width:800px; height:600px; padding:20px; text-align:center; border: 10px solid #787878">
        <div style="width:750px; height:550px; padding:20px; text-align:center; border: 5px solid #787878">
            <span style="font-size:50px; font-weight:bold">Certificate of Completion</span>
            <br><br>
            <span style="font-size:25px"><i>This is to certify that</i></span>
            <br><br>
            <span style="font-size:30px"><b>@ViewBag.studentName</b></span><br /><br />
            <span style="font-size:25px"><i>has completed the course</i></span> <br /><br />
            <span style="font-size:30px">@ViewBag.programName</span> <br /><br />
            <span style="font-size:20px">with score of <b>@ViewBag.grad</b></span> <br /><br /><br /><br />
            <span style="font-size:25px"><i>dated</i></span><br>
             @DateTime.Now.ToLongDateString()
        </div>
    </div>




    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.5.3/jspdf.min.js"></script>
    <script src="~/Scripts/html2canvas.js"></script>
    <script>
        $(function () {

            html2canvas(document.body, {
                onrendered: function (canvas) {
                    var img = canvas.toDataURL("image/jpg", 1.0);
                    var doc = new jsPDF();
                    doc.addImage(img, "JPEG", 5, 0,310,250);
                    doc.save("certification.pdf");
                }
            });

        });

    </script>
</body>
</html>




