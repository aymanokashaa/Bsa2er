
@model IEnumerable<Bsa2er_MVC.Models.Booksection>


<div class="card w-100 " style="display:block">
    <div class="card-header">
        <h3 class="card-title text-right float-right">
            البوم الصور
        </h3>
    </div>
    <div class="card-body">
        <div class="tab-content p-0">
           
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="card col-md-4 ml-2 mt-3">
                            <div class="card-header text-center">
                                @Html.DisplayFor(modelItem => item.title)

                            </div>
                            <div class="card-body text-center">

                                <img class="card-img" src="~/images/Booksections/@item.imagepath" />


                            </div>
                            <div class="card-footer text-center">
                                @Html.ActionLink("حذف", "Delete", "Booksections", new { id = item.id }, new { @class = "btn btn-danger" })
                                @Html.ActionLink("اضافة كتاب", "Create", "Books", new { id = item.id }, new { @class = "btn btn-success" })
                                @Html.ActionLink("تفاصيل", "Details", "Booksections", new { id = item.id }, new { @class = "btn btn-dark " })
                                @Html.ActionLink("الكتب", "Index", "Books", new { id = item.id }, new { @class = "btn btn-dark " })

                            </div>


                        </div>
                    }

                </div>
                <div class="addImg p-3">
                    @Html.ActionLink("أنشأ قسم جديد", "Create", "Booksections", null, new { @class = "btn btn-primary" })
                </div>
          
        </div>
    </div>
    <div class="card-footer clearfix">

    </div>
</div>

