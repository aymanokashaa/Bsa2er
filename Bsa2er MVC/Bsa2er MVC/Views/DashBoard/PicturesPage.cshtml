@model IEnumerable<Bsa2er_MVC.Models.Gallery>


    <div class="card w-100 " style="display:block">
        <div class="card-header">
            <h3 class="card-title text-right float-right">
                البوم الصور
            </h3>
        </div>
        <div class="card-body">
            <div class="tab-content p-0">
                <div class="gallery-box">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-6 col-lg-4 col-xl-3 p-2 m-1" style="box-shadow:gray 1px 1px 5px">
                                <div class="img-d mb-1">
                                    <img src="~/images/Gallery/@item.Gallery_path" width="150" height="150">
                                </div>
                                @Html.ActionLink("تعديل", "Edit", "Gallery", new { id = item.G_Id }, new { @class = "btn btn-primary" }) |
                                @Html.ActionLink("حذف", "Delete", "Gallery", new { id = item.G_Id }, new { @class = "btn  btn-danger" })
                            </div>
                        }

                    </div>
                    <div class="addImg p-3">
                        @Html.ActionLink("إضافة صورة جديدة", "Create", "Gallery", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer clearfix">

        </div>
    </div>

