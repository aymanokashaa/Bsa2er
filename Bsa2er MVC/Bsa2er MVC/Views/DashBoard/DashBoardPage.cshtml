                                     InsertionMode = InsertionMode.Replace,
                                     UpdateTargetId = "ContentSection"
                                 }, new { @class = "nav-link", id = "AjaxLinkGallery" })
                            @*<a href="#" class="nav-link">
                                <p>
                                    إدارة الصور

