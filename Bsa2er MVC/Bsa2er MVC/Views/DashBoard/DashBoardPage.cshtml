                            </a>*@
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper " style="background-image: url(../../images/6.jpg)">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark" style="font-size: 2.5rem;">Dashboard</h1>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                            @Html.AntiForgeryToken()
                            <a class="brand-link text-danger" href="javascript:document.getElementById('logoutForm').submit()">تسجيل الخروج</a>
                            }
                        </div><!-- /.col -->

                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><img src="~/images/7.png" width="200" id="BasaerLogo" alt="Basaer Logo"></li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <!-- Small boxes (Stat box) -->
                    <div class="row">
                        <div class="col-lg-4 col-6">
                            <!-- small box -->
                            <div class="small-box bg-success">
                                <div class="inner">
                                    <h3>@ViewBag.NumOfStudents</h3>

                                    <p style="font-size: 25px;">عدد الطلاب</p>
                                </div>
                                <div class="icon">
                                    <i class="fa fa-graduation-cap"></i>
                                </div>
                                <!-- <a href="projects.html" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a> -->
                            </div>
                        </div>
                        <!-- ./col -->
                        <div class="col-lg-4 col-6">
                            <!-- small box -->
                            <div class="small-box  bg-info">
                                <div class="inner">
                                    <h3>@ViewBag.NumOfNewStudents</h3>

                                    <p style="font-size: 25px;">الطلاب الجدد</p>
                                </div>
                                <div class="icon">
                                    <i class="fa fa-user-plus"></i>
                                </div>
                            </div>
                        </div>
                        <!-- ./col -->
                        <div class="col-lg-4 col-6">
                            <!-- small box -->
                            <div class="small-box  bg-olive">
                                <div class="inner">
                                    <h3>@ViewBag.NumOfProgram</h3>

                                    <p style="font-size: 25px;">عدد الدورات</p>
                                </div>
                                <div class="icon">
                                    <i class="fa fa-video-camera"></i>
                                </div>
                            </div>
                        </div>
                        <!-- ./col -->
                        <div class="col-lg-6 col-6">
                            <!-- small box -->
                            <div class="small-box bg-teal">
                                <div class="inner">
                                    <h3>@ViewBag.NumOfAllVisitors</h3>

                                    <p style="font-size: 25px;"> عدد الزائرين الكلى</p>
                                </div>
                                <div class="icon">
                                    <i class="fa fa-user-circle"></i>
                                </div>
                            </div>
                        </div>
                        <!-- ./col -->
                        <div class="col-lg-6 col-6">
                            <!-- small box -->
                            <div class="small-box bg-teal">
                                <div class="inner">
                                    <h3>@ViewBag.NumOfTodayVisitors</h3>

                                    <p style="font-size: 25px;">عدد الزائرين اليوم</p>
                                </div>
                                <div class="icon">
                                    <i class="fa fa-user-circle"></i>
                                </div>
                            </div>
                        </div>
                        <!-- ./col -->
                    </div>
                    <!-- /.row -->
                    <!-- Main row -->
                    <div class="row">
                        <div class="container-fluid float-right">
                            <!-- Left col -->
                            <section id="ContentSection" class="col-lg-12 connectedSortable text-right float-right" dir="rtl">
                                <!-- Custom tabs (Charts with tabs)-->
                                <div class="card w-100 " style="display:none">
                                    <div class="card-header">
                                        <h3 class="card-title text-right float-right">
                                        </h3>
                                    </div> <!--card-header-->
                                    <div class="card-body">
                                        <div class="tab-content p-0">
                                            <img src="~/images/DashBoard/Loading.gif" width="100" height="100" />
                                        </div>
                                    </div>  <!--card-body-->
                                    <div class="card-footer clearfix">

                                    </div>
                                </div>
                                <!-- /.card -->


                            </section>

                        </div>
                    </div>
                    <!-- /.row (main row) -->
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->




        </div>


        <!-- /.content-wrapper -->
        <footer class="main-footer" >
            <strong>Copyright &copy; 2020 <a href="#">Basear</a>.</strong>
            All rights reserved.
        </footer>



    </div>
    <!-- ./wrapper -->
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script>
        $("#AjaxLinkTwo").html('<p>إدارة المعلمين</p ><i class="float-left fa fa-user-circle-o"></i>').on("click", function () { $(".card").css("display", "block") });
        $("#AjaxLinkOne").html('<p>إدارة المشرفين</p ><i class="float-left fa fa-vcard"></i>').on("click", function () { $(".card").css("display", "block") });
        $("#AjaxLinkThree").html('<p>إدارة الطلاب</p ><i class="float-left fa fa-graduation-cap"></i>').on("click", function () { $(".card").css("display", "block") });
        $("#AjaxLinkNews").html('<p>إدارة الأخبار</p ><i class="float-left fa fa-newspaper-o"></i>').on("click", function () { $(".card").css("display", "block") });
        $("#AjaxLinkGallery").html('<p>إدارة الصور</p ><i class="float-left fa fa-image"></i>').on("click", function () { $(".card").css("display", "block") });
        $("#AjaxLinkBooks").html('<p>إدارة الكتب</p ><i class="float-left fa fa-book"></i>').on("click", function () { $(".card").css("display", "block") });

        $("#dropLink").on("click", function () {

            $("#drop").toggleClass("dispnon");
        });
        window.onresize = function () {
            if (window.innerWidth <= 500) {
                $("#side").removeClass("main-sidebar");
            } else {
                $("#side").addClass("main-sidebar");
            }
        };
    </script>

</body>
</html>

