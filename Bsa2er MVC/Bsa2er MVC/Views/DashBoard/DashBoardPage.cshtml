                                    <p>
                                        إدارة الأخبار

                                    </p>
                                    <i class="float-left fa fa-newspaper-o"></i>
                                </a>-->
                        </li>
                        <li class="nav-item has-treeview">
                            @Ajax.ActionLink("إدارة الكتب", "BookSectionPage", "DashBoard", null,
                               new AjaxOptions()
                               {
                                   HttpMethod = "GET",
                                   InsertionMode = InsertionMode.Replace,
                                   UpdateTargetId = "ContentSection"
                               }, new { @class = "nav-link", id = "AjaxLinkBooks" })
                            @*<a href="/Booksections/Index" class="nav-link">
                                <p>
                                    إدارة الكتب

                                </p>
                                <i class="float-left fa fa-book"></i>
                            </a>*@
                        </li>
                        <li class="nav-item has-treeview">
                            @Ajax.ActionLink("إدارة الصور", "PicturesPage", "DashBoard", null,
