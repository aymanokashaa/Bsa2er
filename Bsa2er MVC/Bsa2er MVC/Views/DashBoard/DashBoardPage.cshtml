                            <li class="nav-item has-treeview">
                                @Ajax.ActionLink(" ", "Index", "User", new { roleId = "2" },
                                 new AjaxOptions()
                                 {
                                     HttpMethod = "GET",
                                     InsertionMode = InsertionMode.Replace,
                                     UpdateTargetId = "ContentSection"
                                 }, new { @class = "nav-link", id = "AjaxLinkOne" })

                                <!--<a href='/User/Index?roleId="2"' class="nav-link">
                                    <p>
                                        إدارة المشرفين

                                    </p>
                                    <i class="float-left fa fa-vcard"></i>
                                </a>-->
                            </li>
                        }

                        <li class="nav-item has-treeview">
                            @Ajax.ActionLink(" ", "Index", "User", new { roleId = "3" },
                            new AjaxOptions()
                            {
                                HttpMethod = "GET",
                                InsertionMode = InsertionMode.Replace,
                                UpdateTargetId = "ContentSection"
                            }, new { @class = "nav-link", id = "AjaxLinkTwo" })
                            <!--<a href="" class="nav-link">
                                <p>
                                    إدارة المعلمين

                                </p>
                                <i class="float-left fa fa-user-circle-o"></i>
                            </a-->
                        </li>
                        <li class="nav-item has-treeview">
                            @Ajax.ActionLink(" ", "Index", "User", new { roleId = "4" },
                     new AjaxOptions()
                     {
                         HttpMethod = "GET",
                         InsertionMode = InsertionMode.Replace,
                         UpdateTargetId = "ContentSection"
                     }, new { @class = "nav-link", id = "AjaxLinkThree" })
                            <!--<a href='/User/Index?roleId="4"' class="nav-link">
                            <p>

                                إدارة الطلاب

                            </p>
                            <i class="float-left fa fa-graduation-cap"></i>
                        </a>-->
                        </li>
                        <li class="nav-item has-treeview">
                            <a id="dropLink" class="nav-link" >
                                <svg style="display: inline;width:20px;height:20px;" fill="black" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>

                                <p>
                                    إدارة البرامج

                                </p>

                                <i class="float-left fa fa-video-camera"></i>
                            </a>
                            <ul class="nav nav-pills nav-sidebar flex-column text-right dispnon" id="drop" >
                                <li>
                                    @Ajax.ActionLink("البرامج العامة", "ProgramsPage", "DashBoard", new { type = Bsa2er_MVC.Models.ProgramType.PublicProgram },
                                       new AjaxOptions()
                                       {
                                           HttpMethod = "GET",
                                           InsertionMode = InsertionMode.Replace,
                                           UpdateTargetId = "ContentSection"
                                       }, new { @class = "nav-link" })
                                    @*<a href="/Programs/Index" class="nav-link">
                                        <p>
                                            البرامج العامة

                                        </p>

                                    </a>*@
                                </li>
                                <li>
                                    @Ajax.ActionLink("البرامج العلمية", "ProgramsPage", "DashBoard", new { type = Bsa2er_MVC.Models.ProgramType.Program },
                                       new AjaxOptions()
                                       {
                                           HttpMethod = "GET",
                                           InsertionMode = InsertionMode.Replace,
                                           UpdateTargetId = "ContentSection"
                                       }, new { @class = "nav-link" })
                                    @*<a href="/Programs/Index" class="nav-link">
                                            <p>
                                                البرامج العلمية

                                            </p>

                                        </a>*@
                                </li>
                                <li>
                                    @Ajax.ActionLink("الدورات العلمية", "ProgramsPage", "DashBoard", new { type = Bsa2er_MVC.Models.ProgramType.Track },
                                       new AjaxOptions()
                                       {
                                           HttpMethod = "GET",
                                           InsertionMode = InsertionMode.Replace,
                                           UpdateTargetId = "ContentSection"
                                       }, new { @class = "nav-link" })
                                    @*<a href="/Programs/Index" class="nav-link">
                                        <p>
                                            الدورات العلمية

                                        </p>
                                      
                                    </a>*@
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item has-treeview">
                            @Ajax.ActionLink(" ", "News", "DashBoard", null,
                    new AjaxOptions()
                    {
                        HttpMethod = "GET",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "ContentSection"
                    }, new { @class = "nav-link", id = "AjaxLinkNews" })
