    <link href="~/Content/Track.css" rel="stylesheet" />
    <style>

        .Usercard {
            position: relative;
            width: 250px; /* Remove for full width */
            height: 170px; /* Remove for full width */
            margin-bottom: 5px auto;
            box-shadow: 0 0 100px rgba(0,0,0, .3);
        }

        .Usercard-header {
            position: relative;
            height: 80px;
            background-size: cover;
            background-position: top;
        }

            .Usercard-header:after {
                content: '';
                position: absolute;
                width: 100%;
                height: 100%;
                background: linear-gradient(to top, rgb(5,85,134), rgba(181,181,181, 0.1));
            }

        .Usercard-header-bar {
            position: absolute;
            top: 0;
            width: 100%;
            z-index: 1;
            width: 100%;
        }

        .Usersr-only {
            position: absolute;
            width: 1px;
            height: 1px;
            clip: rect(0,0,0,0);
            border: none;
            overflow: hidden;
        }

        .Userbtn-message {
            display: inline-block;
            background: url(images/logout.svg) no-repeat;
            width: 35px;
            height: 35px;
            margin-right: 5px;
            margin-top: -15px;
        }

        .Userbtn-menu {
            display: inline-block;
            background: url(images/rsz_back.png) no-repeat;
            width: 32px;
            height: 32px;
            margin-left: 10px;
            margin-top: 10px;
        }

        svg .Userpolygon {
            fill: #fff;
        }

        .Usercard-header-slanted-edge {
            position: absolute;
            bottom: -3px;
            z-index: 1;
            width: 100%;
            right: 0;
            left: 0;
        }

        .Userbtn-follow {
            position: absolute;
            top: -15px;
            right: 25px;
            width: 45px;
            height: 45px;
            background: linear-gradient(to left, #2D77C1, #68FAC2);
            border-radius: 100%;
            box-shadow: 0 10px 15px rgba(110,221,235, .53);
        }

            .Userbtn-follow:after {
                content: '';
                position: absolute;
                background: url(../../images/DashBoard/edit-button.svg) no-repeat;
                width: 17px;
                height: 17px;
                left: 50%;
                top: 50%;
                transform: translate(-50%, -50%);
            }

        .Usercard-body {
            text-align: center;
            padding-left: 10px;
            background-color: white;
            color: black;
  
        }

        .Username {
            font-size: 15px;
            font-weight: 700;
            text-transform: uppercase;
            margin: 0 auto;
        }

        .Userjob-title {
            font-size: 20px;
            font-weight: 500;
            margin-top: 3px;
            color: #919191;
        }
        #BasaerLogo:hover {
            transform: scale(1.4);
        }
        #BasaerLogo{
            transition:all 1s;
        }
        .dispnon{
            display:none;
        }
        #drop{
            transition:all 1s;
        }
        #dropLink:hover {
            cursor: pointer;
        }
     
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-maroon elevation-4 " id="side">
            <!-- Brand Logo -->
            <div class="Usercard w-100">
                <div class="Usercard-header" style="background-image: url(../../images/7.png);background-size:contain;background-repeat:no-repeat;">
                    <div class="Usercard-header-slanted-edge">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 200"><path class="Userpolygon" d="M-20,200,1000,0V200Z"></path></svg>

                        <a href="#" class="Userbtn-follow"><span class="Usersr-only">الصفحة الشخصية</span></a>
                    </div>
                </div>
                <div class="Usercard-body">
                    <div class="image">
                        <img src="~/@ViewBag.img" class=" elevation-2 img-circle" width="50" height="50" alt="User Image">
                    </div>
                    <h2 class="Username">@User.Identity.Name</h2>

                    @if (User.IsInRole("Owner"))
                    {
                        <h4 class="Userjob-title"> المالك </h4>
                    }
                    else if (User.IsInRole("Admin"))
                    {
                        <h4 class="Userjob-title"> مشرف </h4>
                    }


                </div>

            </div>


            <!-- Sidebar -->

            <div class="sidebar mt-3">
                <!-- Sidebar Menu -->
                <nav class="mt-0">
                    <ul class="nav nav-pills nav-sidebar flex-column text-right overflow-auto"  data-widget="treeview" role="menu" data-accordion="false">
