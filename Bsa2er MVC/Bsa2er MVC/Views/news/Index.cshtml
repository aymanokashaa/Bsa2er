@model IEnumerable<Bsa2er_MVC.Models.news>

@{
    ViewBag.Title = "الاخبار";
}

    <h2>الاخبار</h2>

<p>
    @Html.ActionLink("Create New ", "Create")
</p>
<div class="tracks-box">
    <h1 class="text-center m-4">الاخبار</h1>

    <div class="row " >
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 col-xl-3 p-2">
                <div class="card bg-info text-light">
                    <div class="img-c">
                        <img width="150" height="150" src="~/images/News/@item.ImagePath">
                    </div>
                    <div class="card-title"> <h5>@item.title</h5></div>
                    <div class="card-body">

                        <p class="card-text"> @item.body.Substring(0, 20) .....</p>

                        @Html.ActionLink("Edit", "Edit", new { id = item.id },new { @class= "btn btn-primary" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-primary" })

                    </div>
                </div>
            </div>
        }
    </div>
</div>
