@model Bsa2er_MVC.Models.news

@{
    ViewBag.Title = "حذف الخبر";
}

    <h2 class="text-center mb-3" dir="rtl">حذف الخبر</h2>

<h3 class="text-right mr-3" dir="rtl">هل انت متأكد تريد حذف هذا الخبر؟</h3>
<div class=" justify-content-between text-right mr-3" dir="rtl" style="min-height:310px;">
    
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.body)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.body)
        </dd>

        <dt>
            <lable id="img">صورة الخبر</lable>
        </dt>

        <dd>
            <img height="150" width="150" id="img" src="~/images/News/@Model.ImagePath" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-secondary" /> 
            @Html.ActionLink("ارجع الى قائمة الاخبار", "Index",null,new { @class="float-left"})
        </div>
    }
</div>
