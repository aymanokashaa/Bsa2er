@model IEnumerable<Bsa2er_MVC.Models.Book>

@{
    ViewBag.Title = "Index";
}


<p class="text-center h3">
    @if (User.IsInRole("instructor"))
    {
    @Html.ActionLink(" أنشأ كتاب", "Create", "Books")
    }
</p>
<div class=" container">
    <div class="row ">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 col-xl-3 p-2">
                <div class="card-header text-center">

                    @Html.DisplayFor(modelItem => item.Title)


                </div>
                <div class="card-body text-center">

             
                        <img  class="card-img" src="~/images/Books/@item.imageFilePath" />
                        </div>
                   
                <div class="card-footer text-center ">
                    @if (User.IsInRole("Instructor") || User.IsInRole("Admin") || User.IsInRole("Owner"))
                    {
                @Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                   @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger ml-2 " })}

                    @Html.ActionLink("التفاصيل", "Details", new { id = item.Id }, new { @class = "btn btn-dark mt-md-2 mt-lg-0" })
                </div>

                </div>

        }
    </div>

</div>

