@model Bsa2er_MVC.Models.Book

@{
    ViewBag.Title = "Create";
}
<div class="container">
    <h2 class="text-center">أنشا قسم</h2>
    @using (Html.BeginForm("Create", "Books", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4 class="text-center">أضف كتاب  </h4>
    <hr />
    <div class="text-center">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>

            <div class="form-row">

                <div class="col-xs-10">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-xs-2">
                    <label class="control-label" dir="rtl">اسم الكتاب</label>
                </div>

            </div>

            <div class="form-row mt-4">
                <input type="file" class="col-xs-10" dir="rtl" id="ImageFile" name="ImageFile" />
                <div class="col-xs-2">
                    <label class="control-label" dir="rtl">صورة الكتاب</label>
                </div>
            </div>
            <div class="form-row mt-4">
                <input type="file" class="col-xs-10" dir="rtl" id="PdfFile" name="PdfFile" />
                <div class="col-xs-2">
                    <label class="control-label" dir="rtl">الكتاب</label>
                </div>
            </div>
            <div class="form-row text-center mb-3">
                <div class="col-xs-12 ">
                    <input type="submit" value="أنشأ الكتاب" class="btn btn-primary" />
                </div>
            </div>
        </div>
        }


    </div>