@model Bsa2er_MVC.Models.Book

@{
    ViewBag.Title = "Edit";
}
    <div class="container">
        <div class="form-horizontal text-center ">

            @using (Html.BeginForm("Edit", "Books", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <h4>Book</h4>
                <hr />
                @Html.HiddenFor(model => model.Id)

                <div class="form-row">
                    <div class="col-xs-10">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                    <div class="col-xs-2">
                        اسم الكتاب

                    </div>
                </div>

                <div class="form-row mt-2">
                    <div class="col-xs-10">
                        <input type="file" dir="rtl" id="PdfFile" name="PdfFile" />
                    </div>
                    <div class="col-xs-2">
                        الكتاب
                    </div>

                </div>

                <div class="form-row mt-2">

                    <div class="col-xs-10">
                        <input type="file" dir="rtl" id="ImageFile" name="ImageFile" />
                    </div>
                    <div class="col-xs-2">
                        صورة الكتاب
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-xs-offset-2 col-xs-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        @Html.ActionLink("Back to List", "Index")

                    </div>
                </div>
            }

        </div>
    </div>