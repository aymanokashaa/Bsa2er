@model Bsa2er_MVC.Models.ResetPasswordViewModel
@{ ViewBag.Title = "Reset password"; }


@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
@Html.AntiForgeryToken()
                <h2 class="text-center ml-5 pl-5">تغيير كلمة السر </h2>
                                <hr />
                                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                                                @Html.HiddenFor(model => model.Code)
                                                                                <div class="form-row">
                                                                                    <div class="offset-5 col-3">
                                                                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                                                                    </div>
                                                                                    <div class="col-1">
                                                                                        @Html.LabelFor(m => m.Email, "البريد الالكتروني", new { @class = " control-label" })
                                                                                    </div>
                                                                                </div>
                                                                                         
                                                                                                             <div class="form-row mt-5">
                                                                                                                    <div class="offset-5 col-3">
                                                                                                                        @Html.TextBoxFor(m => m.username, new { @class = "form-control" })
                                                                                                                    </div>
                                                                                                                    <div class="col-1">
                                                                                                                        @Html.LabelFor(m => m.username, " اسم المستخدم", new { @class = "control-label" })
                                                                                                                    </div>
                                                                                                                </div>
                                                                                                                                <input type="hidden" name="imagepath" />
                                                                                                                                                <div class="form-row mt-5">
                                                                                                                                                    <div class="offset-5 col-3">
                                                                                                                                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                                                                                                                                    </div>
                                                                                                                                                    <div class="col-1">
                                                                                                                                                        @Html.LabelFor(m => m.Password, "كلمة السر", new { @class = "control-label" })
                                                                                                                                                    </div>
                                                                                                                                                </div>
                                                                                                                                                                <div class="form-row mt-5">

                                                                                                                                                                    <div class="offset-5 col-3">
                                                                                                                                                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                                                                                                                                                    </div>
                                                                                                                                                                    <div class="col-1">
                                                                                                                                                                        @Html.LabelFor(m => m.ConfirmPassword, "تاكيد كلمة السر", new { @class = "control-label" })
                                                                                                                                                                    </div>
                                                                                                                                                                </div>
                                                                                                                                                                                <div class="form-row mt-5">
                                                                                                                                                                                    <div class="col-12 text-center ml-5">
                                                                                                                                                                                        <input type="submit" class="btn btn-success" value="حفظ التعديلات" />
                                                                                                                                                                                    </div>
                                                                                                                                                                                </div>}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}