@{
    ViewBag.Title = "اتصل بنا";
}
<div class="container ">
    <div class="row mt-2">
        <div class="col-12 col-lg-6" style="text-align:center;">
            <img src="~/images/4.png" width="80%" alt="img" /></br>
            <a class="fa fa-facebook text-primary  btn btn-toolbar  fa-2x p-4 mb-3" target="_blank"
               href="https://www.facebook.com/"></a>
            <a class="fa fa-twitter text-info   btn btn-toolbar  fa-2x p-4 mb-3" target="_blank"
               href="https://twitter.com/"></a>
            <a class="fa fa-instagram text-warning   btn btn-toolbar  fa-2x p-4 mb-3" target="_blank"
               href="https://github.com/"></a>
            <a class="fa fa-youtube text-danger  btn btn-toolbar  fa-2x p-4 mb-3" target="_blank"
               href="https://github.com/"></a>
        </div>

        <div class="col-lg-6  col-12">
            <form method="Get"style="direction: rtl;text-align: center;">
                <div class="form-group ">
                    <span> الاسم بالكامل</span>
                    <input placeholder="الاسم بالكامل" type="text" class="form-control" />
                </div>
                <div class="form-group ">
                    <span> البريد الالكتروني</span>
                    <input placeholder="البريد الالكتروني" type="text" class="form-control" />
                </div>
                <div class="form-group ">
                    <span> موضوع الرسالة</span>
                    <input placeholder="موضوع الرسالة" type="text" class="form-control" />
                </div>
                <div class="form-group ">
                    <span> رسالتك</span>
                    <textarea placeholder="مضمون الرسالة" type="text" class="form-control" rows="8" style="resize: none;"></textarea>
                </div>
                <button type="submit" class="btn btn-primary"> ارسال الرسالة</button>
            </form>
        </div>
    </div>
</div>
