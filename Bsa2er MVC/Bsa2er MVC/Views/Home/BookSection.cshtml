@model IEnumerable<Bsa2er_MVC.Models.Booksection>

@{
    ViewBag.Title = "Index";
}

<div class=" container">
    <div class="row ">
        @foreach (var item in Model)
        {
            <div class="card col-md-4 ml-2 mt-3">
                <div class="card-header text-center">
                    @Html.DisplayFor(modelItem => item.title)

                </div>
                <div class="card-body text-center">

                    <img class="card-img" src="~/images/Booksections/@item.imagepath" />


                </div>
                <div class="card-footer text-center">

                    @Html.ActionLink("الكتب", "Index", "Books", new { id = item.id }, new { @class = "btn btn-dark mt-md-2" })

                </div>


            </div>




        }
    </div>

</div>



