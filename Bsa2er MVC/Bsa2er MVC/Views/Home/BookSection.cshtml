@model IEnumerable<Bsa2er_MVC.Models.Booksection>

@{
    ViewBag.Title = "قسم الكتب";
}

    <div class=" container">
        <h1 class="h1 text-center m-4">أقسام الكتب</h1>
        <div class="row " dir="rtl">
      
            @foreach (var item in Model)
            {
                <div class="card col-md-4 ml-2 mt-3">
                    <div class="card-header text-center">
                        @Html.DisplayFor(modelItem => item.title)

                    </div>
                    <div class="card-body text-center">

                        <img class="card-img" src="~/images/Booksections/@item.imagepath" width="100%" height="100%" />


                    </div>
                    <div class="card-footer text-center">

                        @Html.ActionLink("الكتب", "Index", "Books", new { id = item.id }, new { @class = "btn btn-dark mt-md-2" })

                    </div>


                </div>




            }
           
        </div>
    </div>



