@model Bsa2er_MVC.Models.Program

@{
    Layout = "~/Views/Shared/Manage.cshtml";
    ViewBag.Title = "حذف البرنامج";
}


<h2 style="text-align:center"class="mt-3"> تفاصيل البرنامج المراد حذفه</h2>
<div class="container">
    div class="imgContainer mt-5">
    <img src="~/images/Programs/@Model.Program_MainImage">
</div>
    <div class="row">
        <table class="table  table-bordered table-hover mt-5 mb-5 tab ">
            <tbody>
                <tr class="d-flex">
                    <td class="col-4">@Html.DisplayNameFor(model => model.Instructor.ApplicationUser.UserName) </td>
                    <td class="col-8">
                        @Html.DisplayFor(model => model.Instructor.ApplicationUser.UserName)
                    </td>
                </tr>

                <tr class="d-flex">
                    <td class="col-4">@Html.DisplayNameFor(model => model.Instructor.Degree) </td>
                    <td class="col-8">
                        @Html.DisplayFor(model => model.Instructor.Degree)
                    </td>
                </tr>
                <tr class="d-flex">
                    <td class="col-4"> @Html.DisplayNameFor(model => model.Program_Title)</td>
                    <td class="col-8"> @Html.DisplayFor(model => model.Program_Title)</td>
                </tr>
                <tr class="d-flex">
                    <td class="col-4">@Html.DisplayNameFor(model => model.Program_Body)</td>
                    <td class="col-8"> @Html.DisplayFor(model => model.Program_Body)</td>
                </tr>
                <tr class="d-flex">
                    <td class="col-4">@Html.DisplayNameFor(model => model.Program_Advantages)</td>
                    <td class="col-8">@Html.DisplayFor(model => model.Program_Advantages)</td>

                </tr>

                <tr class="d-flex">
                    <td class="col-4">@Html.DisplayNameFor(model => model.Program_Goals)</td>
                    <td class="col-8">@Html.DisplayFor(model => model.Program_Goals)</td>
                </tr>
                <tr class="d-flex">
                    <td class="col-4">@Html.DisplayNameFor(model => model.Program_ImagePath)</td>
                    <td class="col-8">@Html.DisplayFor(model => model.Program_ImagePath)</td>
                </tr>
                <tr class="d-flex">
                    <td class="col-4">@Html.DisplayNameFor(model => model.Program_VideoLink)</td>
                    <td class="col-8">@Html.DisplayFor(model => model.Program_VideoLink)</td>
                </tr>
                <tr class="d-flex">
                    <td class="col-4">
                        @Html.DisplayNameFor(model => model.Program_TargetGroup)
                    </td>
                    <td class="col-8">
                        @Html.DisplayFor(model => model.Program_TargetGroup)
                    </td>
                </tr>
                <tr class="d-flex">
                    <td class="col-4">
                        @Html.DisplayNameFor(model => model.Program_Type)
                    </td>
                    <td class="col-8"> @Html.DisplayFor(model => model.Program_Type)</td>
                </tr>
                <tr class="d-flex">
                    <td class="col-4">
                        @Html.DisplayNameFor(model => model.NumOfLecture)
                    </td>
                    <td class="col-8">
                        @Html.DisplayFor(model => model.NumOfLecture)
                    </td>
                </tr>

            </tbody>
        </table>
    </div>
</div>

