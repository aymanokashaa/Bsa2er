@model Bsa2er_MVC.Models.Program

@{
    ViewBag.Title = "تفاصيل البرنامج";
}

<h2 style="text-align:center">تفاصيل البرنامج</h2>
<div class="container">
    @if (Model.Program_Type == Bsa2er_MVC.Models.ProgramType.PublicProgram)
    {
    <div style="padding-left:25vw;">
        <iframe  id="prgframe" src="@Model.Program_VideoLink" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    }
    @if (!(Model.Program_Type == Bsa2er_MVC.Models.ProgramType.PublicProgram))
    {
        <div class="imgContainer mt-5">
            <img src="~/images/Programs/@Model.Program_ImagePath" />
        </div>
    }


    <div class="row">
        <table class="table  table-bordered table-hover mt-5 mb-5 tab ">
            <tbody>
                <tr class="d-flex">
                    <td class="col-4"> اسم المعلم</td>
                    <td class="col-8"> @Html.DisplayFor(model => model.Instructor.ApplicationUser.fullname)</td>
                </tr>

                <tr class="d-flex">
                    <td class="col-4"> @Html.DisplayNameFor(model => model.Program_Title)</td>
                    <td class="col-8"> @Html.DisplayFor(model => model.Program_Title)</td>
                </tr>
                <tr class="d-flex">
                    <td class="col-4">@Html.DisplayNameFor(model => model.Program_Body)</td>
                    <td class="col-8"> @Html.DisplayFor(model => model.Program_Body)</td>
                </tr>
                <tr class="d-flex">
                    <td class="col-4">@Html.DisplayNameFor(model => model.Program_Advantages)</td>
                    <td class="col-8">@Html.DisplayFor(model => model.Program_Advantages)</td>

                </tr>

                <tr class="d-flex">
                    <td class="col-4">@Html.DisplayNameFor(model => model.Program_Goals)</td>
                    <td class="col-8">@Html.DisplayFor(model => model.Program_Goals)</td>
                </tr>
                <tr class="d-flex">
                    <td class="col-4">
                        @Html.DisplayNameFor(model => model.Program_TargetGroup)
                    </td>
                    <td class="col-8">
                        @Html.DisplayFor(model => model.Program_TargetGroup)
                    </td>
                </tr>
                <tr class="d-flex">
                    <td class="col-4">
                        @Html.DisplayNameFor(model => model.Program_Type)
                    </td>
                 @if (Model.Program_Type== Bsa2er_MVC.Models.ProgramType.Program)
                    {
                        <td class="col-8">
                            برنامج علمي
                        </td>
                    }
                    @if (Model.Program_Type == Bsa2er_MVC.Models.ProgramType.Track)
                    {
                        <td class="col-8">
                            دورة تدريبية
                        </td>

                    }
                    @if (Model.Program_Type == Bsa2er_MVC.Models.ProgramType.PublicProgram)
                    {
                        <td class="col-8">
                            برنامج عام
                        </td>
                    }
                        @if (!(Model.Program_Type == Bsa2er_MVC.Models.ProgramType.PublicProgram))
                        {
                        <tr class="d-flex">
                        <td class="col-4">
                            @Html.DisplayNameFor(model => model.NumOfLecture)
                        </td>
                        <td class="col-8 numoflectures">
                            @Html.DisplayFor(model => model.NumOfLecture)
                        </td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>


