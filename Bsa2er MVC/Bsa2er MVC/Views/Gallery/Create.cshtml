@model Bsa2er_MVC.Models.Gallery

@{
    ViewBag.Title = "أنشاء صورة";
}

<h2 dir="rtl" class="text-center mb-5">انشاء صورة جديدة</h2>

@using (Html.BeginForm("Create","Gallery",FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal text-right mb-2 mt-2" dir="rtl" style="height:50px">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="height:40px;" dir="rtl">
            <label class = "control-label col-md-2">ادخل الصورة</label>
            @*@Html.LabelFor(model => model.Gallery_path, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                <input type="file"  class = "form-control" accept="image" name="img"/>
                @*@Html.EditorFor(model => model.Gallery_path, new { htmlAttributes = new { @class = "form-control" } })*@
                @*@Html.ValidationMessageFor(model => model.Gallery_path, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="انشأ" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
