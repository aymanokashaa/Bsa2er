@model Bsa2er_MVC.Models.CarouselImage

@{
    ViewBag.Title = "تعديل صورة";
}

    <h2 class="text-center text-right" dir="rtl">تعديل الصورة</h2>

@using (Html.BeginForm("Edit", "Gallery", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal text-right" dir="rtl" style="height:250px;">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group" style="height:100px">
        <label class="control-label col-md-2"> الصورة</label>
        @*@Html.LabelFor(model => model.Gallery_path, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">
            <img width="150" height="150" src="~/images/CarouselImages/@Model.ImagePath" />
            @*@Html.EditorFor(model => model.Gallery_path, new { htmlAttributes = new { @class = "form-control" } })*@
            @*@Html.ValidationMessageFor(model => model.Gallery_path, "", new { @class = "text-danger" })*@
        </div>
    </div>

    <div class="form-group" dir="rtl" style="height:70px">
        <label class="control-label col-md-2">ادخل الصورة الجديدة</label>
        @*@Html.LabelFor(model => model.Gallery_path, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">
            <input type="file" class="form-control" accept="image" name="ImageFile" />
            @*@Html.EditorFor(model => model.Gallery_path, new { htmlAttributes = new { @class = "form-control" } })*@
            @*@Html.ValidationMessageFor(model => model.Gallery_path, "", new { @class = "text-danger" })*@
        </div>
    </div>

    <div class="form-group" dir="rtl">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="حفظ" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("الرجوع الى الصفحة الرئيسية", "Index", "Home", null, null)
</div>
