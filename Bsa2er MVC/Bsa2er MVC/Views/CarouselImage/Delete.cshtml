@model Bsa2er_MVC.Models.CarouselImage

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center mb-3" dir="rtl">حذف الصورة</h2>

<h3 class="text-right mr-3" dir="rtl">هل انت متأكد تريد حذف هذه الصورة؟</h3>
<div class=" justify-content-between text-right mr-3" dir="rtl" style="min-height:200px;">

    <dl class="dl-horizontal">
        <dt>
            <lable id="img">الصورة </lable>
        </dt>

        <dd>
            <img height="150" width="150" id="img" src="~/images/CarouselImages/@Model.ImagePath" />
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-primary" />  |
           @Html.ActionLink("الرجوع الى الصفحة الرئيسية", "Index", "Home", null, null)
        </div>
    }
</div>
