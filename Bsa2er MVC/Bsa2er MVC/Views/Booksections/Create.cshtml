@model Bsa2er_MVC.Models.Booksection

@{
    ViewBag.Title = "Create";
}
    <div class="container">
        <h2 class="text-center">أنشا قسم</h2>
        @using (Html.BeginForm("Create", "Booksections", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-center">اقسام الكتب</h4>
        <hr />
        <div class="text-center">
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
        <div class="form-row">

            <div class="col-xs-10">
                @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-xs-2">
                <label class="control-label" dir="rtl">اسم القسم</label>
            </div>

        </div>

        <div class="form-row mt-4">
            <input type="file" class="col-xs-10" dir="rtl" id="Image" name="Image" />
            <div class="col-xs-2">
                <label class="control-label" dir="rtl">صورة القسم</label>
            </div>
        </div>

        <div class="form-row text-center mt-5 mb-5">
            <div class="col-xs-12">
                <input type="submit" value="أنشا" class="btn btn-primary" />
            </div>
        </div>
    </div>
        }

  
    </div>