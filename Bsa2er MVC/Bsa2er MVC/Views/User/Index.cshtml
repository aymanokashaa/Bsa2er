@model IEnumerable<Bsa2er_MVC.Models.ApplicationUser>

@{ 
    string rolename="";
}

<div class="card w-100 " style="display:block">
    <div class="card-header">
        <h3 class="card-title text-right float-right">
            @if (ViewBag.RoleId == "2")
            {
                <span>المشرفين</span>
                rolename = "مشرف";

            }
            else if (ViewBag.RoleId == "3")
            {
                <span>المعلمين</span>
                rolename = "معلم";
            }
            else if(ViewBag.RoleId=="4")
            {
                <span>الطلاب</span>
                rolename = "طالب";
            }

        </h3>
    </div> 
    <div class="card-body">
        <div class="tab-content p-0">
            <p>
                @if (ViewBag.RoleId!="4")
                {
                    @Html.ActionLink($"أنشأ {rolename} جديد", "Register","Account", new {role=ViewBag.RoleId }, new { @class = "btn btn-primary" })

                }
            </p>
            <table class="table table-bordered table-hover table-striped table-avatar">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Country)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Qualification)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.dataOfRegister)
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qualification)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dataOfRegister.Date)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                    @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
                }

            </table>
        </div>
    </div>  
    <div class="card-footer clearfix">
       
    </div>
</div>

